#:import math math

[ClockNumber@Label]:
    text: str(ctx.i)
    pos_hint: {"center_x": 0.5+0.42*math.sin(math.pi/6*(ctx.i-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(ctx.i-12))}
    font_size: self.height/16

<ParentTest>:



<ClockApp>:
    face: face
    ticks: ticks
    ScatterLayout:
        size_hint: 1.0, 0.08
        pos_hint: {'x': 0, 'y': 0.92}
        canvas:
            Color:
                rgb: 0.2, 0.2, 0.2
            Rectangle:
                size: self.size
                pos: self.pos
        FloatLayout:
            size_hint: 1.0, 1.0
            pos_hint: {'x':0, 'y':0}
            canvas:
                Color:
                    rgb: 0.5, 0.5, 0.5
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                size_hint: None, None
                pos_hint: {'x':0.01}
                size: self.parent.height * 0.9, self.parent.height * 0.9
                y: (self.parent.height / 2) - (self.height/2)
                background_color: 0,0,0,0
                Image:
                    source: 'source/gears.png'
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.size
                    allow_stretch: True

    ScatterLayout:
        size_hint: 1.0, 0.92
        pos_hint: {'x': 0, 'y': 0.0}
        FloatLayout:
            id: face
            size_hint: None, None
            pos_hint: {"center_x":0.5, "center_y":0.5}
            size: 0.9*min(self.parent.size), 0.9*min(self.parent.size)
            canvas:
                Color:
                    rgb: 0.1, 0.1, 0.1
                Ellipse:
                    size: self.size
                    pos: self.pos
            ClockNumber:
                i: 1
            ClockNumber:
                i: 2
            ClockNumber:
                i: 3
            ClockNumber:
                i: 4
            ClockNumber:
                i: 5
            ClockNumber:
                i: 6
            ClockNumber:
                i: 7
            ClockNumber:
                i: 8
            ClockNumber:
                i: 9
            ClockNumber:
                i: 10
            ClockNumber:
                i: 11
            ClockNumber:
                i: 12
        Ticks:
            id: ticks
            r: min(root.size)*0.9/2

<CustomPopup>:
    size_hint: .5, .5
    auto_dismiss: False
    Button:
        text: 'Click me to dismiss'
        on_press: root.dismiss()
